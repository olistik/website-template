<div class="crud_form">
<h1>New collection</h1>

<% form_for(@collection) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

<ul id="advertisements">
    <b>Inserzioni:</b>
    <% for advertisement in @advertisements do -%>
        <li class="advertisement">
            <%= check_box_tag "collection[advertisement_ids][]", advertisement.id %>
            <%= link_to h(advertisement.name), advertisement -%>
        </li>
    <% end -%>
</ul>

  <p>
    <%= f.label :category_id %><br />
    <%= f.select :category_id, @categories %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', collections_path %>
</div>
