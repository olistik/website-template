<div class="crud_form">
<h1>Editing cms_action</h1>

<% form_for(@cms_action) do |f| %>
    <p>
        <%= f.label :cms_controller_id %><br />
        <%= f.select :cms_controller_id, CmsController.all_for_select %>
        <%= hidden_field_tag :direction, :change_cms_controller %>
    </p>
    <p>
        <%= submit_tag 'Update' %>
    </p>
<% end %>

<% form_for(@cms_action) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.select :name, @cms_action.cms_controller.cms_actions_left() + [@cms_action.name] %><br />
  </p>
  <p>
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </p>
  <p>
    <%= hidden_field_tag :direction, :change_cms_action %>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', cms_actions_path %>
</div>
