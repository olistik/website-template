<div class="crud_form">
<h1>Listing contact_types</h1>

<%= link_to 'New contact_type', new_contact_type_path %>
<table>
  <tr>
    <th>Name</th>
    <th># Dettagli</th>
    <th colspan="3">Azioni</th>
  </tr>

<% @contact_types.each do |contact_type| %>
  <tr>
    <td><%=h contact_type.name %></td>
    <td><%= contact_type.contact_details.size %></td>
    <td><%= link_to 'Show', contact_type %></td>
    <td><%= link_to 'Edit', edit_contact_type_path(contact_type) %></td>
    <td><%= link_to 'Destroy', contact_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New contact_type', new_contact_type_path %>
</div>
