<div class="crud_form">
<h1>Listing contact_details</h1>

<%= link_to 'New contact_detail', new_contact_detail_path %>
<table>
  <tr>
    <th>Contact</th>
    <th>Contact type</th>
    <th>Content</th>
    <th colspan="3">Azioni</th>
  </tr>

<% @contact_details.each do |contact_detail| %>
  <tr>
    <td><%=h contact_detail.contact.name %></td>
    <td><%=h contact_detail.contact_type.name %></td>
    <td><%=h contact_detail.content %></td>
    <td><%= link_to 'Show', contact_detail %></td>
    <td><%= link_to 'Edit', edit_contact_detail_path(contact_detail) %></td>
    <td><%= link_to 'Destroy', contact_detail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New contact_detail', new_contact_detail_path %>
</div>
