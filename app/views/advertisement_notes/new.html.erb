<div class="crud_form">
<h1>Nuova <i>Nota Inserzione</i></h1>

<% form_for(@advertisement_note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content, "Nota" %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :advertisement_id %><br />
    <%= f.select :advertisement_id, @advertisements %>
  </p>
  <p>
    <%= f.submit 'Crea' %>
  </p>
<% end %>

<%= link_to 'Lista <i>Note Inserzioni</i>', advertisement_notes_path %>
</div>
