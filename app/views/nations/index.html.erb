<div class="crud_form">
<h1>Listing nations</h1>

<%= link_to 'New nation', new_nation_path %>
<table>
  <tr>
    <th>Name</th>
    <th># Regioni</th>
    <th colspan="3">Azioni</th>
  </tr>

<% @nations.each do |nation| %>
  <tr>
    <td><%=h nation.name %></td>
    <td><%= nation.regions.size %></td>
    <td><%= link_to 'Show', nation %></td>
    <td><%= link_to 'Edit', edit_nation_path(nation) %></td>
    <td><%= link_to 'Destroy', nation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New nation', new_nation_path %>
</div>
