<div class="crud_form">
<h1>Editing customer</h1>

<% form_for(@customer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name %>
  </p>
  <p>
    <%= f.label :vat %><br />
    <%= f.text_field :vat %>
  </p>

    <%= render :partial => 'shared/geo_selects', :locals => {
        :form_builder => f,
        :nations => @nations,
        :regions => @regions,
        :provinces => @provinces,
        :cities => @cities
    } %>

  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :civic_number %><br />
    <%= f.text_field :civic_number %>
  </p>
  <p>
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :referrer %><br />
    <%= f.text_field :referrer %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @customer %> |
<%= link_to 'Back', customers_path %>
</div>
